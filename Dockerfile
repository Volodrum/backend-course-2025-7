# Використовуємо легку версію Node.js
FROM node:18-alpine

# Встановлюємо робочу директорію всередині контейнера
WORKDIR /app

# Спочатку копіюємо тільки файли залежностей (для кешування шарів)
COPY package*.json ./

# Встановлюємо залежності
RUN npm install

# Копіюємо весь код проєкту
COPY . .

# Створюємо папку для кешу всередині контейнера
RUN mkdir -p cache

# Відкриваємо порт 3000
EXPOSE 3000

# Запускаємо сервер
# -H 0.0.0.0 дозволяє доступ ззовні контейнера
CMD ["node", "main.js", "-H", "0.0.0.0", "-p", "3000", "-c", "./cache"]